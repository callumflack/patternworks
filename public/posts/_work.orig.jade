						.Project.Grid-cell
							.FlexEmbed
								.FlexEmbed-ratio.FlexEmbed-ratio--2by1
								.FlexEmbed-content
									a.o-coverImage(href="../work/#{ slug }", style="background-image: url(/img/thumb-#{ slug }.jpg)")
