- var assetPath = "/assets/images/"

!= partial("_shared/header")
		
section.Content.Content--animateIn
	.Grid.Grid--withGutterLg
		for post, slug in public._data
			if post.ishome === true
				.Grid-cell.u-xs-size1of2.u-sm-size1of3
					a.Post--inList(href="/#{post.category}/#{slug}")
						.Post-aligner
							figure.Post-image
								img(src="#{assetPath}post-hero-#{slug}.jpg", alt="#{slug}")
							h1.Headline--sm= post.title
							.Post-meta
								span.Post-tag= post.tags
