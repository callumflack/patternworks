- var assetPath = "/assets/images/"
- var currentProject = current.path[1]

if current.source === "index"
	//- != partial("../_shared/header")
	section.Content.Content--top.Content--animateIn
		.Grid.Grid--withGutterLg
			for post, slug in public._data
				if post.ispublished === true
					if post.category === current.path[0]
						.Grid-cell.u-xs-size1of2.u-sm-size1of3
							a.Post--inList(href="/#{post.category}/#{slug}")
								.Post-aligner
									figure.Post-image
										img(src="#{assetPath}post-hero-#{slug}.jpg", alt="#{slug}")
									h1.Headline--sm= post.title
									.Post-meta
										span.Post-tag= post.tags

else
	header.Header(role="banner")
		.Block--space.Header--animateIn
			.Block--masthead
				h1.Block--masthead-text
					em= title
					span= intro
		//- .Block--height5of6.Hero--animateIn
		//- 	.o-container.o-container--super
		//- 		figure.Post-hero(style="background-image: url('#{assetPath}#{currentProject}-hero.jpg')")
		.Block.Hero--animateIn
			figure
				img(src="#{assetPath}#{currentProject}-hero.jpg", alt="")

	section.Content
		!= yield
